.xepan-commerce-tool-cart(id='{$_name}' class='{$class}')
  {$Content}
  {cart_container}
  ul
    li.dropdown.reset-margin.text-center(style="padding:0px;margin:0px;")
      a.dropdown-toggle.reset-margin(href='#', data-toggle='dropdown', role='button', aria-expanded='false' style="padding:0px;margin:0px;")
        span.xepan-commerce-cart-item-count  {total_count}0{/}
        |  - Items
        span.caret
      {lister_wrapper}
      ul.dropdown-menu.dropdown-cart.xepan-cart(role='menu',style='width:400px; background:white') 
        .scroll-item(margin="10px 20px")
          {lister}
          .row
            .col-md-6 Item
            .col-md-5 Amount
            .col-md-1
          {rows}{row}
          .row.xepan-commerce-tool-cart-item-row(id='item-{$id}' style="margin:0;margin-bottom:5px;")
            {image_wrapper}
            .col-md-2
              img(alt='{image}{/}' src='{$image_url}' onerror="this.src='vendor/xepan/commerce/templates/view/tool/cart/images/not-found.png'" width="100%;")
            {/}
            .col-md-6.short-cart-item-name(style="margin:0px;padding:0px;")
              {$name} ({$item_code})
              {custom_fields_wrapper}
              small {custom_field}
              div 
                small 
                  {$id}: {$name}
              {/}{/}
            .col-lg-3
              {$sales_amount} ({qty_wrapper}{qty_form}{qty}0{/}{/}{/})
            .col-lg-1
              button.btn.btn-xs.btn-info.pull-right.xepan-commerce-cart-item-delete(data-cartid='{$id}') x
          {/}{/}
          {/lister}
        {not_found}
        li.xepan-cart-empty
          {$not_found_message}
        {/}
        {footer}
        li.divider
        li
          {sum_amount_excluding_tax_wrapper}
          .row
            .col-lg-6 Sum Amount
            .col-lg-6.text-right  {sum_amount_excluding_tax}{/}
          {/}
          {discount_voucher_wrapper}
          .row
            .col-lg-6 Apply Coupon
            .col-lg-6.text-right  {$discount_voucher}
          .row
            .col-lg-6 Discount Amount
            .col-lg-6.text-right  {$discount_amount}
          {/}
          {sum_shipping_charge_wrapper}
          .row
            .col-lg-6 Shipping Charge
            .col-lg-6.text-right {sum_shipping_charge}0.00{/}
          {/}
          {tax_amount_wrapper}
          .row
            .col-lg-6 Tax Amount
            .col-lg-6.text-right ₹ {tax_amount}tax_amount{/}
          {/}
          {total_amount_wrapper}
          .row
            .col-lg-6 Total Amount:
            .col-lg-6.text-right ₹ {net_amount}{/}
          {/}
        li.divider
        li
          .row
            .col-md-6
              {cart_detail_btn_wrapper}
              .btn.btn-success.btn-block
                a.text-center(href="{$cart_detail_url}") View Cart
              {/}
            .col-md-6
              {proceed_to_next_button_wrapper}
              .btn.btn-block.btn-primary.xepan-cart-proceed-to-next-btn Checkout
              {/}
        {/footer}
      {/lister_wrapper}
  {/}