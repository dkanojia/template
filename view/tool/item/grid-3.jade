div(id='{$_name}' class="{$class} row" style="{$style}")
  {rows}{row}
  .xepan-commerce-item(data-xsnb-item-id='{$id}', onclick='javascript:void(0);')
    .content-grid-effect.slow-zoom.vertical
      {image_wrapper}
      .img-box.xepan-commerce-image-wrapper
        img.img-responsive.zoom-img(src='{first_image}abc{/}', alt='image', href='{$item_detail_page_url_via_image}')
      {/image_wrapper}
      .info-box
        .info-content.simpleCart_shelfItem
          {name_wrapper}
          h4.xepan-commerce-item-name(href='{item_detail_page_url_via_name}{/}')
            {$name}
          span.seprator
          {/}
          {sale_price_wrapper}
          p
            span.item_price.xepan-commerce-tool-item-sale-price {$sale_price}
          span.seprator
          {/}
          {original_price_wrapper}
          span.seprator
          span.item_price.xepan-commerce-tool-item-sale-price {$original_price}
          {/}
          {shipping_charge_wrapper} 
          span.item_price.xepan-commerce-tool-item-sale-price {$shipping_charge} 
          {/}
          {description_wrapper}
          span.separator
          small.xepan-commerce-item-short-description {$description}
          {/}
          {specification_wrapper}
          span.separator
          small
            div.xepan-commerce-tool-item-specification
              {specification}
              {rows}{row}
              {$name}
              {$value}
              {/}{/}
              {/specification}
          {/}
          {personalizedbtn_wrapper}
          span.separator
          a.item_add.single-item.hvr-outline-out.button2(data-xsnbitemid="{$id}" class="commerce-personalize-button-wrapper") {$personalizedbtn}
          {/}
          {addtocart_wrapper}
          span.separator
          .xepan-commerce-item-addtocart(data-xsnbitemid="{$id}" data-name="{$name}" style="display:inline-block; ") {$Addtocart}
          {/}
          span.separator
  {/}{/}
  {not_found}
  div.full-width.alert.alert-warning(role="alert")
    strong.glyphicon.glyphicon-warning-sign &nbsp;Warning!
      span &nbsp;{$not_found_message}
  {/}
  {paginator_wrapper}
  .xepan-commerce-item-paginator(style='float:none; clear:both')
    {$Paginator}
  {/}
